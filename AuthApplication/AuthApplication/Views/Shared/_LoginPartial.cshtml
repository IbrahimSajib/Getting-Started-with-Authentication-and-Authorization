@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a  class="nav-link text-light" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="btn" style="background-color:#FFC833;">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
            <a class="btn" asp-area="Identity" asp-page="/Account/Register" style="background-color:#FFC833;">Register</a>
    </li>
    <li class="nav-item">
            <a class="btn ms-2" asp-area="Identity" asp-page="/Account/Login" style="background-color:#FFC833;">Login</a>
    </li>
}
</ul>
